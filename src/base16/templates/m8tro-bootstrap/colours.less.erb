//## <%= @scheme %>
@m8tro-red:    #<%= @base["08"]["hex"] %>;
@m8tro-orange: #<%= @base["09"]["hex"] %>;
@m8tro-yellow: #<%= @base["0A"]["hex"] %>;
@m8tro-green:  #<%= @base["0B"]["hex"] %>;
@m8tro-aqua:   #<%= @base["0C"]["hex"] %>;
@m8tro-blue:   #<%= @base["0D"]["hex"] %>;
@m8tro-purple: #<%= @base["0E"]["hex"] %>;
@m8tro-pink:   #<%= @base["0F"]["hex"] %>;

//## Gray and brand colors for use across Bootstrap.
@gray-darker:            lighten(#000, 13.5%);
@gray-dark:              #<%= @base["03"]["hex"] %>;
@gray-light:             #<%= @base["05"]["hex"] %>;
@gray-lighter:           #<%= @base["06"]["hex"] %>;
@gray:                   mix(@gray-light,@gray-dark, 50%);

@brand-primary:         #<%= @base["07"]["hex"] %>;
@brand-success:         @m8tro-green;
@brand-info:            @m8tro-blue;
@brand-warning:         @m8tro-yellow;
@brand-danger:          @m8tro-red;

//** Background color for `<body>`.
@body-bg:               #<%= @base["00"]["hex"] %>;
//** Global text color on `<body>`.
@text-color:            @brand-primary;

//** Global textual link color.
@link-color:            @gray-lighter;
//** Link hover color set via `darken()` function.
@link-hover-color:      @link-color;